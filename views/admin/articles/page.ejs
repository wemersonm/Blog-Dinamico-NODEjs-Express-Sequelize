<%- include ('../../partials/header.ejs')%>
<body>
  <%- include ('../../partials/navbarhome.ejs')%>

  <div class="container">
    <%result.articles.rows.forEach(article=>{%>
    <div class="card">
      <div class="card-header">
        <h5><%=article.title%></h5>
      </div>
      <div class="card-body">
        <a class="btn btn-primary" href="/<%=article.slug%>">Ler artigo</a>
      </div>
    </div>
    <br />

    <%})%>

    <div class="row">
      <div class="col col-12">
        <%if(result.page > 2) {%>
        <a href="/articles/page/<%= result.page-1%>" style="float: left">
          <<< Previus</a
        >
        <%} else if(result.page == 2){%>
        <a href="/" style="float: left"> <<< Previus</a>
        <%}%> <%if(result.next) {%>
        <a href="/articles/page/<%= result.page+1%>" style="float: right"
          >Next >></a
        >
        <%}%>
      </div>
    </div>
  </div>
</body>
<%-include ('../../partials/footer.ejs')%>
